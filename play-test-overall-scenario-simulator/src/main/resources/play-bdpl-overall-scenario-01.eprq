#
# Basic pattern detecting 4 company-related events in sequence bounded by a time window.
#

PREFIX rdf:     <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX uctelco: <http://events.event-processing.org/uc/telco/>
PREFIX geo:     <http://www.w3.org/2003/01/geo/wgs84_pos#>
PREFIX xsd:     <http://www.w3.org/2001/XMLSchema#>
PREFIX :        <http://events.event-processing.org/types/>

CONSTRUCT {
	:e rdf:type :UcTelcoEsrRecom .
	:e :stream <http://streams.event-processing.org/ids/OverallResults01#stream> .
	:e uctelco:ackRequired "false"^^xsd:boolean .
	:e uctelco:answerRequired "false"^^xsd:boolean .
	:e :message "Pattern 01: Four tweets about our companies were detected."^^xsd:string .
	:e uctelco:action <blank://action1> .
	<blank://action1> rdf:type uctelco:OpenTwitter ;
		:screenName ?p01screenName01 , ?p01screenName02 , ?p01screenName03 , ?p01screenName04 .
	:e :members ?p01e1 , ?p01e2 , ?p01e3 , ?p01e4 .
}
WHERE {
	WINDOW {
		EVENT ?p01id1 {
			?p01e1 rdf:type :google .
			?p01e1 :stream <http://streams.event-processing.org/ids/TwitterFeed#stream> .
			?p01e1 :screenName ?p01screenName01 .
			}
		SEQ
		EVENT ?p01id2 {
			?p01e2 rdf:type :apple .
			?p01e2 :stream <http://streams.event-processing.org/ids/TwitterFeed#stream> .
			?p01e2 :screenName ?p01screenName02 .
			}
		SEQ
		EVENT ?p01id3 {
			?p01e3 rdf:type :microsoft .
			?p01e3 :stream <http://streams.event-processing.org/ids/TwitterFeed#stream> .
			?p01e3 :screenName ?p01screenName03 .
			}
		SEQ
		EVENT ?p01id4 {
			?p01e4 rdf:type :yahoo .
			?p01e4 :stream <http://streams.event-processing.org/ids/TwitterFeed#stream> .
			?p01e4 :screenName ?p01screenName04 .
			}
	} ("PT5S"^^xsd:duration, sliding)
}
